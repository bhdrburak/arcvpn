<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFragment">

    <include
        android:id="@+id/app_bar"
        layout="@layout/layout_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/btn_logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar">


        <ImageView
            android:id="@+id/iv_connection_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_status_disconnected" />

        <TextView
            android:id="@+id/tv_connection_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/montserrat_600"
            android:gravity="center"
            android:padding="0dp"
            android:text="@string/disconnected"
            android:textColor="@color/accent"
            android:textSize="16sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_logout"
        style="@style/TextViewStyle.SmallText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_horizontal"
        android:layout_marginBottom="16dp"
        android:text="@string/log_out"
        android:textColor="@color/logout"
        android:background="@drawable/bg_connectionstatus_disconnected"
        app:layout_constraintBottom_toTopOf="@+id/cl_status_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_status_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_horizontal"
        android:layout_marginBottom="@dimen/margin_horizontal"
        android:background="@drawable/bg_connectionstatus_disconnected"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/cl_status_bottom">

        <TextView
            android:id="@+id/tv_connectionname_title"
            style="@style/TextViewStyle.SmallTitle"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/connection"
            android:textColor="@color/error"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_connectionname_signal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_signal_disconnected"
            app:layout_constraintBottom_toBottomOf="@+id/tv_connectionname_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_connectionname_title" />

        <TextView
            android:id="@+id/tv_connectionname"
            style="@style/TextViewStyle.SmallText"
            android:textColor="@color/error"
            app:layout_constraintBottom_toBottomOf="@+id/tv_connectionname_title"
            app:layout_constraintEnd_toStartOf="@+id/iv_connectionname_signal"
            app:layout_constraintTop_toTopOf="@+id/tv_connectionname_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_status_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_horizontal"
        android:layout_marginBottom="40dp"
        android:background="@drawable/bg_edittext"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_ip_title"
            style="@style/TextViewStyle.SmallTitle"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/ip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_ip"
            style="@style/TextViewStyle.SmallText"
            android:layout_width="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:gravity="end"
            app:layout_constraintBottom_toBottomOf="@+id/tv_ip_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_ip_title"
            app:layout_constraintTop_toTopOf="@+id/tv_ip_title" />

        <ImageView
            android:id="@+id/divider_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:src="@color/stroke"
            app:layout_constraintTop_toBottomOf="@+id/tv_ip_title" />

        <TextView
            android:id="@+id/tv_username_title"
            style="@style/TextViewStyle.SmallTitle"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/hint_username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_1" />

        <TextView
            android:id="@+id/tv_username"
            style="@style/TextViewStyle.SmallText"
            android:layout_width="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:gravity="end"
            app:layout_constraintBottom_toBottomOf="@+id/tv_username_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_username_title"
            app:layout_constraintTop_toTopOf="@+id/tv_username_title" />

        <ImageView
            android:id="@+id/divider_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:src="@color/stroke"
            app:layout_constraintTop_toBottomOf="@+id/tv_username_title" />

        <TextView
            android:id="@+id/tv_duration_title"
            style="@style/TextViewStyle.SmallTitle"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/duration"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_2" />

        <TextView
            android:id="@+id/tv_duration"
            style="@style/TextViewStyle.SmallText"
            android:layout_width="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:gravity="end"
            app:layout_constraintBottom_toBottomOf="@+id/tv_duration_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_duration_title"
            app:layout_constraintTop_toTopOf="@+id/tv_duration_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>